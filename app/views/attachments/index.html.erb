<h1>Attachments</h1>
<div class="index-list">
  <ul class="list-group">
    <% @attachments.each do |attachment| %>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm py-3 px-lg-5 border bg-light">
            <%= attachment.title %>
          </div>
          <div class="col-sm py-3 px-lg-5 border bg-light">
            <%= attachment.description %>
          </div>
          <div class="col-sm py-3 px-lg-5 border bg-light">
            <%= attachment.link %>
          </div>
          <div class="col-sm py-3 px-lg-5 border bg-light">
            <%= link_to "Destroy", attachment_path(attachment), method: :delete %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="row">
  <div class="col-sm nav-bar-items">
    <%= link_to "New Attachment", new_attachment_path, class: 'button' %>
  </div>
  <div class="col-sm nav-bar-items">
    <%= link_to "SignOut", signout_path, class: 'button' %>
  </div>
</div>
