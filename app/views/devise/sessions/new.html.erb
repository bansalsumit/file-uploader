<% content_for :head do %>
  <%= stylesheet_link_tag 'login' %>
<% end %>
<div id="login-page">
  <div class="form">
    <p class="red"><%= alert %></p>
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login-input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'login-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'label' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'submit' %>
      </div>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= link_to "Home", '/' %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
